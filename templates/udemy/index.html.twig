{% extends 'base.html.twig' %}

{% block title %} Todo App{% endblock %}
{% block body %}
    {% if todos | length ==0 %}
        No todo for now!
    {% else %}

        <div class="accordion" id="accordionExample">
            {% for todo in todos %}

                <div class="card">
                    <div class="todo-header " id="headingOne">

                        <div class="btn btn-link collapser d-block   p-2 text-left" type="button" data-toggle="collapse"
                             data-target="#collapseOne{{ loop.index }}"
                             aria-expanded="{% if loop.first %} true {% endif %}"
                             aria-controls="collapseOne{{ loop.index }}">
                            <span class="status {% if todo.status == 'Pending' %} done {% endif %}"></span> <span
                                    class=" todo-name"> {{ todo.title }} </span>
                        </div>

                    </div>

                    <div id="collapseOne{{ loop.index }}" class="collapse "
                         aria-labelledby="headingOne"
                         data-parent="#accordionExample">
                        <div class="card-body">
                            {{ todo.description }}
                            <br>
                            <span> Date: {{ todo.createdDate  | date("m/d/Y") }} </span>
                            <hr>
                            <ul class="nav ">
                                <li class="mr-4 d-inline-block"><a href="/edit/{{ todo.id }}">Edit</a></li>
                                <li class="mr-4 d-inline-block"><a href="/edit/{{ todo.id }}">Close</a></li>
                                <li class="mr-4 d-inline-block"><a href="/delete/{{ todo.id }}">Delete</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    {% endif %}


{% endblock %}